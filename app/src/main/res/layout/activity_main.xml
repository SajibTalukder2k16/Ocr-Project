<?xml version="1.0" encoding="utf-8"?><LinearLayout android:layout_height="match_parent"    android:layout_width="match_parent"    xmlns:android="http://schemas.android.com/apk/res/android"    android:background="@color/colorPrimary"    android:orientation="vertical"    >    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:gravity="center"        android:orientation="vertical"        android:weightSum="4.5">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="1"            android:gravity="center"            android:orientation="horizontal"            android:paddingLeft="0dp"            android:paddingTop="0dp"            android:paddingRight="0dp"            android:paddingBottom="0dp"            android:weightSum="2">            <Button                android:id="@+id/user"                android:layout_width="175dp"                android:layout_height="match_parent"                android:layout_marginRight="0dp"                android:layout_weight="0.33"                android:background="@color/colorPrimary"                android:clickable="true"                android:drawableTop="@drawable/profilebutton"                android:focusable="true"                android:gravity="center"                android:paddingLeft="25dp"                android:paddingRight="25dp"                android:text="Profile"                android:textAllCaps="false"                android:textAlignment="center"                android:textSize="17dp"                android:textStyle="bold" />            <Button                android:id="@+id/topics"                android:layout_width="175dp"                android:layout_height="match_parent"                android:layout_marginRight="0dp"                android:background="@color/colorPrimary"                android:clickable="true"                android:drawableTop="@drawable/subject"                android:focusable="true"                android:gravity="center"                android:paddingLeft="25dp"                android:paddingRight="25dp"                android:text="Topic"                android:textAlignment="center"                android:textAllCaps="false"                android:textSize="17dp"                android:textStyle="bold" />        </LinearLayout>        -        <LinearLayout            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="1"            android:gravity="center"            android:orientation="horizontal"            android:paddingLeft="0dp"            android:paddingTop="10dp"            android:paddingRight="0dp"            android:paddingBottom="0dp"            android:weightSum="2">            <Button                android:id="@+id/programming"                android:layout_width="175dp"                android:layout_height="match_parent"                android:layout_marginRight="0dp"                android:layout_weight="0.33"                android:background="@color/colorPrimary"                android:clickable="true"                android:drawableTop="@drawable/programmingxml"                android:focusable="true"                android:gravity="center"                android:paddingLeft="25dp"                android:paddingRight="25dp"                android:text="Programming"                android:textAlignment="center"                android:textAllCaps="false"                android:textSize="17dp"                android:textStyle="bold" />            <Button                android:id="@+id/scanner"                android:layout_width="175dp"                android:layout_height="match_parent"                android:layout_marginRight="0dp"                android:layout_weight="0.33"                android:background="@color/colorPrimary"                android:clickable="true"                android:drawableTop="@drawable/scanner"                android:focusable="true"                android:gravity="center"                android:paddingLeft="25dp"                android:paddingRight="25dp"                android:text="Scanner"                android:textAlignment="center"                android:textAllCaps="false"                android:textSize="17dp"                android:textStyle="bold" />        </LinearLayout>        -        <LinearLayout            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="1"            android:gravity="center"            android:orientation="horizontal"            android:paddingLeft="0dp"            android:paddingTop="10dp"            android:paddingRight="0dp"            android:paddingBottom="0dp"            android:weightSum="2">            <Button                android:id="@+id/science"                android:layout_width="175dp"                android:layout_height="match_parent"                android:layout_marginRight="0dp"                android:layout_weight="0.33"                android:background="@color/colorPrimary"                android:clickable="true"                android:drawableTop="@drawable/science"                android:focusable="true"                android:gravity="center"                android:paddingLeft="25dp"                android:paddingRight="25dp"                android:text="Tech news"                android:textAlignment="center"                android:textAllCaps="false"                android:textSize="17dp"                android:textStyle="bold" />            <Button                android:id="@+id/ebook"                android:layout_width="175dp"                android:layout_height="match_parent"                android:layout_marginRight="0dp"                android:layout_weight="0.33"                android:background="@color/colorPrimary"                android:clickable="true"                android:drawableTop="@drawable/ebook"                android:focusable="true"                android:gravity="center"                android:paddingLeft="25dp"                android:paddingRight="25dp"                android:text="Ebook"                android:textAlignment="center"                android:textAllCaps="false"                android:textSize="17dp"                android:textStyle="bold" />        </LinearLayout>        -        <LinearLayout            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="1"            android:gravity="center"            android:orientation="horizontal"            android:paddingLeft="0dp"            android:paddingTop="10dp"            android:paddingRight="0dp"            android:paddingBottom="0dp"            android:weightSum="2">            <Button                android:id="@+id/kidscorner"                android:layout_width="175dp"                android:layout_height="match_parent"                android:layout_marginRight="0dp"                android:layout_weight="0.33"                android:background="@color/colorPrimary"                android:clickable="true"                android:drawableTop="@drawable/kidscorner"                android:focusable="true"                android:gravity="center"                android:paddingLeft="25dp"                android:paddingRight="25dp"                android:text="Kids Corner"                android:textAlignment="center"                android:textSize="17dp"                android:textAllCaps="false"                android:textStyle="bold" />            <Button                android:id="@+id/aboutus"                android:layout_width="175dp"                android:layout_height="match_parent"                android:layout_marginRight="0dp"                android:layout_weight="0.33"                android:background="@color/colorPrimary"                android:clickable="true"                android:drawableTop="@drawable/picbutton"                android:focusable="true"                android:gravity="center"                android:paddingLeft="25dp"                android:paddingRight="25dp"                android:text="About us"                android:textAlignment="center"                android:textAllCaps="false"                android:textSize="17dp"                android:textStyle="bold" />        </LinearLayout>    </LinearLayout></LinearLayout>